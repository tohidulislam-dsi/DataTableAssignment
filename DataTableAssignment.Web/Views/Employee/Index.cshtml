    <script>
        $(document).ready(function () {
            var empTable = $('#employeeTable').DataTable({
                "ajax": {
                    "url": "/Employee/GetEmployeeList",
                    "type": "POST",
                    "datatype": "json"
                },
                "columns": [
                    { "data": "name", "name": "name" },
                    { "data": "position", "name": "position" },
                    { "data": "office", "name": "office" },
                    { "data": "age", "name": "age" },
                    { "data": "salary", "name": "salary" }
                ],
                "serverSide": true,
                "order": [0, "asc"],
                "processing": true,
                "language": {
                    "processing": "processing... please wait"
                },
                "dom": '<"floatRight"B><"clear"><"floatRight"l><"clear"><"floatRight"f>rpti',
                "buttons": [
                    {
                        extend: 'csvHtml5',
                        text: 'Export CSV',
                        className: 'btn btn-primary'
                    }
                ],
                "initComplete": function () {
                    this.api().columns().every(function () {
                        var column = this;
                        $('input', column.header()).on('keyup change clear', function () {
                            if (column.search() !== this.value) {
                                column.search(this.value, false, false).draw();
                            }
                        });
                    });
                }
            });

            // Disable sorting on search input fields
            $('#employeeTable thead tr:eq(1) th').each(function (i) {
                $('input', this).on('click', function (e) {
                    e.stopPropagation();
                });
            });
        });
    </script>



