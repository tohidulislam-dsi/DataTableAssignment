@{
	ViewBag.Title = "Employee List";
}

<h2>Employee List</h2>

<table id="employeeTable" class="table table-striped table-bordered">
	<thead>
		<tr>
			<th>Employee Name</th>
			<th>Employee Position</th>
			<th>Employee Office</th>
			<th>Employee Age</th>
			<th>Employee Salary</th>
		</tr>
	</thead>

	
</table>

<style>
	.floatRight {
		float: right;
	}

	.clear {
		clear: both;
	}

	#employeeTable{
		margin-bottom: 10em !important;
	}

</style>

